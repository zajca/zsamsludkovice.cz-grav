{% set bannerimage = p.media.images|first %}
<div class="row">
  <div class="large-4 small-4 columns">
{% if bannerimage %}
  <a href="{{ p.url }}">
    {{ bannerimage.cropZoom(100,100).quality(60) }}
  </a>
{% else %}
  <a href="{{ p.url }}">
    <img src="{{ url('theme://images/logo_ludkovice.svg') }}" width="100" height="100">
  </a>
{% endif %}
</div>
<div class="large-8 small-8 columns">
  <h5><a href="{{ p.url }}">{{ p.title }}</a></h5>
  {% if showDate is defined %}
  <h6 class="subheader">{{ p.date|date('d. m. Y') }}</h6>
  {% endif %}
  <h6><a href="#">Více »</a></h6>
</div>
</div>
